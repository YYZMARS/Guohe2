<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_70"
        android:paddingStart="@dimen/dp_70"
        android:paddingTop="@dimen/dp_70"
        android:src="@drawable/img_feedback" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:text="反  馈"
        android:textSize="@dimen/sp_16" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_margin="@dimen/dp_5"
        app:cardBackgroundColor="@color/material_white_1000"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="内容" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/material_grey_200" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="false"
                android:gravity="top"
                android:hint="有什么想告诉我们的吗？"
                android:paddingStart="@dimen/dp_10"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_48"
        app:cardBackgroundColor="@color/material_white_1000"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="联系方式" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/material_grey_200" />

            <EditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="false"
                android:gravity="top"
                android:hint="QQ/微信/电话，方便我们联系到你来更好地解决问题。"
                android:paddingLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_btn_feedback"
        android:text="发射"
        android:textColor="@color/colorPrimary" />

</LinearLayout>